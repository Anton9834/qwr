      xmlns:local="clr-namespace:Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Select">

    <Grid Background="#FFB90D0D">
        <Image HorizontalAlignment="Left" Height="100" Margin="476,360,0,0" VerticalAlignment="Top" Width="100"/>
